@page "/"


<MudText Typo="@Typo.h3" Color="MudBlazor.Color.Primary">Stellar Jade Manager</MudText>
<MudText Typo="@Typo.h4">Добро пожаловать!</MudText>

<div style="height:200px">
    <MudImage
        Src="images/emotes/Kafka 1.png"
        ObjectFit="@ObjectFit.Cover"
              Style="max-height: 100%;width: auto;aspect-ratio:1;"
        Fluid
        Class="mt-5 rounded-lg" />
</div>
<div class="d-flex flex-wrap justify-center align-center gap-10" style="height:400px;width:80%">
    <MudCard>
        <MudCardMedia Image="images/background.webp" Style="height:100%" />
        <MudCardContent>
            <MudText Typo="Typo.h5">Калькулятор</MudText>
            <MudText Typo="Typo.body2">Подсчитайте чистый дохо звездного нефрита.</MudText>
            <MudText Typo="Typo.body2">Спрогнозируйте шансы получить легендарного персонажа</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudNavLink Href="/calculator">Перейти</MudNavLink>
        </MudCardActions>
    </MudCard>
    <MudCard>
        <MudCardMedia Image="images/background.webp" Style="height:100%" />
        <MudCardContent>
            <MudText Typo="Typo.h5">История прыжков</MudText>
            <MudText Typo="Typo.body2">Old paint found on a stone house door.</MudText>
            <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="MudBlazor.Color.Primary">Share</MudButton>
            <MudButton Variant="Variant.Text" Color="MudBlazor.Color.Primary">Learn More</MudButton>
        </MudCardActions>
    </MudCard>
</div>
<div class="d-flex flex-wrap justify-center align-center gap-10" style="height:400px;width:80%">
<MudDivider Class="my-10"/>

<div  style="height:100%">
<MudImage
    Src="images/2_2.webp"
    ObjectFit="@ObjectFit.Cover"
    Style="max-height: 100%;width: auto;aspect-ratio:2;"
    Fluid
    Class="rounded-lg" />
</div>

<MudCarousel  Style="height:100%;aspect-ratio:1" ShowArrows="false" ShowBullets="true" EnableSwipeGesture="true" AutoCycle="true" TData="object">
    <MudCarouselItem Transition="Transition.Fade">
        <MudImage Src="images/characters-full/1315.png"
            ObjectFit="@ObjectFit.Cover"
            Style="aspect-ratio:1;"
            Class="rounded-lg"
            Fluid

        />
    </MudCarouselItem>
    <MudCarouselItem Transition="Transition.Fade">
        <MudImage Src="images/characters-full/1309.png"
            ObjectFit="@ObjectFit.Cover"
            Style="aspect-ratio:1;"
            Class="rounded-lg"
            Fluid
        />
    </MudCarouselItem>
</MudCarousel>

</div>

<style>
    .banner-image{
        background-repeat:no-repeat;
        background-size: 200% 200%;
        background-position: 50% 35%;
    }
    .banner-1{
        background-image: url("images/characters-full/1315.png");
    }

    .banner-2 {
        background-image: url("images/characters-full/1309.png");
    }
</style>


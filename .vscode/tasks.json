{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/StellarJadeManager.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/StellarJadeManager.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch https",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Server/StellarJadeManager.Server.csproj",
                "--launch-profile",
                "https"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run https",
            "command": "dotnet",
            "type":"process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Server/StellarJadeManager.Server.csproj",
                "--launch-profile",
                "https"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/StellarJadeManager.sln"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}